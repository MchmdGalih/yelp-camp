<% layout("layout/boilerplate.ejs") %>
<div
  class="conatiner d-flex justify-content-center align-items-center mt-2 mb-4"
>
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img
          src="https://images.unsplash.com/photo-1510312305653-8ed496efae75?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt
          class="card-img-top"
        />
        <div class="card-body">
          <h1 class="card-title">Login</h1>
          <form
            action="/auth/signIn"
            class="validations-form"
            method="post"
            novalidate
          >
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                class="form-control"
                name="username"
                id="username"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control"
                name="password"
                id="password"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <button class="btn btn-success w-100">Sign In</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
