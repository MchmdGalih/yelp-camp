<% layout("layout/boilerplate.ejs") %>
<div class="row">
  <h1 class="text-center">Form add campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds/add" method="post">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          class="form-control"
          name="campground[title]"
          id="title"
          placeholder="Title of your Campground"
        />
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          class="form-control"
          name="campground[location]"
          id="location"
          placeholder="Location of your Campground"
        />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image Url</label>
        <input
          type="text"
          class="form-control"
          name="campground[image]"
          id="image"
          placeholder="https://source.unsplash.com/collection/483251"
        />
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Campgrounds Price</label>
        <input class="form-control" type="text" id="price" placeholder="0.00" />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          type="text"
          class="form-control"
          name="campground[description]"
          id="description"
        ></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>

    <a href="/campgrounds">All Campgrounds</a>
  </div>
</div>
