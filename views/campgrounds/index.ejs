<% layout("layout/boilerplate.ejs") %>
<h1>All Campgrounds</h1>
<div>
  <a href="/campgrounds/add">Add New</a>
</div>
<ul>
  <% for(let campground of allCampgrounds){%>
  <!-- <li>
    <a href="/campgrounds/<%=campground._id %>"><%= campground.title %></a>
  </li> -->
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img class="img-fluid" src="<%=campground.image %>" alt="" />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%=campground.title %></h5>
          <p class="card-text"><%=campground.description %></p>
          <p class="card-text">
            <small class="text-muted"><%=campground.location %></small>
          </p>
        </div>
        <a class="btn btn-primary mx-3" href="/campgrounds/<%=campground._id %>">View Details</a>
    </div>
  </div>
  <% } %>
</ul>
